@{
	ViewData["Title"] = "Horarios de Atención";
}

<div class="container">
    <h2 class="text-center mb-4">📋 Horarios de Atención de la Clínica</h2>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@ViewBag.DiaSeleccionado</h5>
