@model ClinicApp.Models.CitasMedica

@{
    ViewData["Title"] = "Detalles de la Cita Médica";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">?? Detalles de la Cita Médica</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Información de la Cita</h6>
            @switch (Model.Estado)
            {
                case "Programada":
                    <span class="badge bg-info">@Model.Estado</span>
                    break;
                case "Confirmada":
                    <span class="badge bg-primary">@Model.Estado</span>
                    break;
                case "Completada":
                    <span class="badge bg-success">@Model.Estado</span>
                    break;
                case "Cancelada":
                    <span class="badge bg-danger">@Model.Estado</span>
                    break;
                default:
                    <span class="badge bg-secondary">@Model.Estado</span>
                    break;
            }
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Fecha y Hora:</dt>
                <dd class="col-sm-9"><strong>@Model.FechaHora.ToString("dddd, dd/MM/yyyy HH:mm")</strong></dd>

                <dt class="col-sm-3">Paciente:</dt>
                <dd class="col-sm-9">@Model.Paciente.Nombres @Model.Paciente.Apellidos</dd>

                <dt class="col-sm-3">Cédula del Paciente:</dt>
                <dd class="col-sm-9">@Model.Paciente.Cedula</dd>

                <dt class="col-sm-3">Teléfono del Paciente:</dt>
                <dd class="col-sm-9">@Model.Paciente.Telefono</dd>

                <dt class="col-sm-3">Médico:</dt>
                <dd class="col-sm-9">Dr(a). @Model.Medico.Nombres @Model.Medico.Apellidos</dd>

                <dt class="col-sm-3">Especialidad:</dt>
                <dd class="col-sm-9">@Model.Medico.Especialidad.Nombre</dd>

                <dt class="col-sm-3">Motivo:</dt>
                <dd class="col-sm-9">@(Model.Motivo ?? "No especificado")</dd>

                <dt class="col-sm-3">Observaciones:</dt>
                <dd class="col-sm-9">@(Model.Observaciones ?? "Sin observaciones")</dd>

                <dt class="col-sm-3">Estado:</dt>
                <dd class="col-sm-9">@Model.Estado</dd>

                <dt class="col-sm-3">Fecha de Creación:</dt>
                <dd class="col-sm-9">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a la lista
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Eliminar
                </a>
            </div>
        </div>
    </div>
</div>
