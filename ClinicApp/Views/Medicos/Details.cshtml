@model ClinicApp.Models.Medico

@{
    ViewData["Title"] = "Detalles del Médico";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">????? Detalles del Médico</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Información del Médico</h6>
            @if (Model.Activo)
            {
                <span class="badge bg-success">Activo</span>
            }
            else
            {
                <span class="badge bg-danger">Inactivo</span>
            }
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Cédula:</dt>
                <dd class="col-sm-9">@Model.Cedula</dd>

                <dt class="col-sm-3">Nombres:</dt>
                <dd class="col-sm-9">@Model.Nombres</dd>

                <dt class="col-sm-3">Apellidos:</dt>
                <dd class="col-sm-9">@Model.Apellidos</dd>

                <dt class="col-sm-3">Especialidad:</dt>
                <dd class="col-sm-9">@Model.Especialidad.Nombre</dd>

                <dt class="col-sm-3">Número de Licencia:</dt>
                <dd class="col-sm-9">@Model.NumeroLicencia</dd>

                <dt class="col-sm-3">Teléfono:</dt>
                <dd class="col-sm-9">@(Model.Telefono ?? "No especificado")</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@(Model.Email ?? "No especificado")</dd>

                <dt class="col-sm-3">Horario de Atención:</dt>
                <dd class="col-sm-9">@Model.HorarioInicio a @Model.HorarioFin</dd>

                <dt class="col-sm-3">Fecha de Registro:</dt>
                <dd class="col-sm-9">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a la lista
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Eliminar
                </a>
            </div>
        </div>
    </div>
</div>
