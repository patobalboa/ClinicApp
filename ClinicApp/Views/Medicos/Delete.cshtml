@model ClinicApp.Models.Medico

@{
    ViewData["Title"] = "Eliminar Médico";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">????? Eliminar Médico</h1>
    </div>

    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">
            <i class="fas fa-exclamation-triangle"></i> ¿Está seguro que desea eliminar este médico?
        </h4>
        <p>Esta acción no se puede deshacer.</p>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">Información del Médico a Eliminar</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Cédula:</dt>
                <dd class="col-sm-9">@Model.Cedula</dd>

                <dt class="col-sm-3">Nombres:</dt>
                <dd class="col-sm-9">@Model.Nombres</dd>

                <dt class="col-sm-3">Apellidos:</dt>
                <dd class="col-sm-9">@Model.Apellidos</dd>

                <dt class="col-sm-3">Especialidad:</dt>
                <dd class="col-sm-9">@Model.Especialidad.Nombre</dd>

                <dt class="col-sm-3">Número de Licencia:</dt>
                <dd class="col-sm-9">@Model.NumeroLicencia</dd>

                <dt class="col-sm-3">Teléfono:</dt>
                <dd class="col-sm-9">@(Model.Telefono ?? "No especificado")</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@(Model.Email ?? "No especificado")</dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>
