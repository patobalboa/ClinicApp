@model ClinicApp.Models.Medico

@{
    ViewData["Title"] = "Editar Médico";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">????? Editar Médico</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Modificar Información del Médico</h6>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="FechaRegistro" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Cedula" class="form-label"></label>
                        <input asp-for="Cedula" class="form-control" maxlength="10" required />
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="NumeroLicencia" class="form-label"></label>
                        <input asp-for="NumeroLicencia" class="form-control" required />
                        <span asp-validation-for="NumeroLicencia" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Nombres" class="form-label"></label>
                        <input asp-for="Nombres" class="form-control" required />
                        <span asp-validation-for="Nombres" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Apellidos" class="form-label"></label>
                        <input asp-for="Apellidos" class="form-control" required />
                        <span asp-validation-for="Apellidos" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="EspecialidadId" class="form-label">Especialidad</label>
                        <select asp-for="EspecialidadId" class="form-control" asp-items="ViewBag.Especialidades" required>
                            <option value="">-- Seleccione una especialidad --</option>
                        </select>
                        <span asp-validation-for="EspecialidadId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Telefono" class="form-label"></label>
                        <input asp-for="Telefono" class="form-control" type="tel" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-check mt-4">
                            <input asp-for="Activo" class="form-check-input" type="checkbox" />
                            <label asp-for="Activo" class="form-check-label"></label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="HorarioInicio" class="form-label">Horario de Inicio</label>
                        <input asp-for="HorarioInicio" class="form-control" type="time" required />
                        <span asp-validation-for="HorarioInicio" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="HorarioFin" class="form-label">Horario de Fin</label>
                        <input asp-for="HorarioFin" class="form-control" type="time" required />
                        <span asp-validation-for="HorarioFin" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Actualizar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
