@model IEnumerable<ClinicApp.Models.Especialidade>

@{
    ViewData["Title"] = "Lista de Especialidades";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">?? Especialidades Médicas</h1>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Nueva Especialidad
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        @foreach (var especialidad in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow h-100">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h6 class="m-0 font-weight-bold text-primary">@especialidad.Nombre</h6>
                        @if (especialidad.Activa)
                        {
                            <span class="badge bg-success">Activa</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactiva</span>
                        }
                    </div>
                    <div class="card-body">
                        <p class="card-text">@(especialidad.Descripcion ?? "Sin descripción")</p>
                        <p class="text-muted small">
                            <i class="fas fa-user-md"></i> Médicos asociados: @especialidad.Medicos.Count
                        </p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@especialidad.Id" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Detalles
                        </a>
                        <a asp-action="Edit" asp-route-id="@especialidad.Id" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@especialidad.Id" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No hay especialidades registradas en el sistema.
        </div>
    }
</div>
