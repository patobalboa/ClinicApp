@model ClinicApp.DTOs.CambiarPasswordDto
@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-key"></i> Cambiar Contraseña
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        <strong>Requisitos de la contraseña:</strong>
                        <ul class="mb-0 mt-2">
                            <li>Mínimo 6 caracteres</li>
                            <li>Al menos una letra mayúscula</li>
                            <li>Al menos una letra minúscula</li>
                            <li>Al menos un número</li>
                            <li>Al menos un símbolo especial (&#64; $ ! % * ? &amp;)</li>
                        </ul>
                    </div>

                    <form asp-action="CambiarPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="PasswordActual" class="form-label required">
                                <i class="bi bi-lock"></i> Contraseña Actual
                            </label>
                            <div class="input-group">
                                <input asp-for="PasswordActual" class="form-control" 
                                       id="passwordActual" type="password"
                                       placeholder="Ingrese su contraseña actual" />
                                <button class="btn btn-outline-secondary" type="button" 
                                        onclick="togglePassword('passwordActual', 'iconActual')">
                                    <i class="bi bi-eye" id="iconActual"></i>
                                </button>
                            </div>
                            <span asp-validation-for="PasswordActual" class="text-danger"></span>
                        </div>

                        <hr class="my-4" />

                        <div class="mb-3">
                            <label asp-for="NuevaPassword" class="form-label required">
                                <i class="bi bi-key"></i> Nueva Contraseña
                            </label>
                            <div class="input-group">
                                <input asp-for="NuevaPassword" class="form-control" 
                                       id="nuevaPassword" type="password"
                                       placeholder="Ingrese su nueva contraseña" />
                                <button class="btn btn-outline-secondary" type="button"
                                        onclick="togglePassword('nuevaPassword', 'iconNueva')">
                                    <i class="bi bi-eye" id="iconNueva"></i>
                                </button>
                            </div>
                            <span asp-validation-for="NuevaPassword" class="text-danger"></span>
                            
                            <!-- Indicador de fortaleza de contraseña -->
                            <div class="mt-2">
                                <div class="progress" style="height: 5px;">
                                    <div class="progress-bar" id="passwordStrength" role="progressbar" 
                                         style="width: 0%"></div>
                                </div>
                                <small id="passwordStrengthText" class="text-muted"></small>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmarNuevaPassword" class="form-label required">
                                <i class="bi bi-check-circle"></i> Confirmar Nueva Contraseña
                            </label>
                            <div class="input-group">
                                <input asp-for="ConfirmarNuevaPassword" class="form-control"
                                       id="confirmarPassword" type="password"
                                       placeholder="Confirme su nueva contraseña" />
                                <button class="btn btn-outline-secondary" type="button"
                                        onclick="togglePassword('confirmarPassword', 'iconConfirmar')">
                                    <i class="bi bi-eye" id="iconConfirmar"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmarNuevaPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="bi bi-check-circle"></i> Cambiar Contraseña
                            </button>
                            <a asp-action="Perfil" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Consejos de seguridad -->
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-shield-check text-success"></i> 
                        Consejos de Seguridad
                    </h6>
                    <ul class="small mb-0">
                        <li>No uses contraseñas que hayas usado en otros sitios</li>
                        <li>No compartas tu contraseña con nadie</li>
                        <li>Cambia tu contraseña regularmente</li>
                        <li>Usa una contraseña única y compleja</li>
                        <li>No uses información personal fácil de adivinar</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Función para mostrar/ocultar contraseña
        function togglePassword(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }

        // Verificador de fortaleza de contraseña
        document.getElementById('nuevaPassword').addEventListener('input', function(e) {
            const password = e.target.value;
            const progressBar = document.getElementById('passwordStrength');
            const strengthText = document.getElementById('passwordStrengthText');

            let strength = 0;
            let message = '';
            let color = '';

            if (password.length === 0) {
                progressBar.style.width = '0%';
                strengthText.textContent = '';
                return;
            }

            // Criterios de fortaleza
            if (password.length >= 6) strength += 20;
            if (password.length >= 8) strength += 10;
            if (password.length >= 10) strength += 10;
            if (/[a-z]/.test(password)) strength += 15;
            if (/[A-Z]/.test(password)) strength += 15;
            if (/[0-9]/.test(password)) strength += 15;
            if (/[@@$!%*?&]/.test(password)) strength += 15;

            // Determinar nivel
            if (strength < 40) {
                message = 'Débil';
                color = 'bg-danger';
            } else if (strength < 70) {
                message = 'Media';
                color = 'bg-warning';
            } else if (strength < 90) {
                message = 'Buena';
                color = 'bg-info';
            } else {
                message = 'Excelente';
                color = 'bg-success';
            }

            progressBar.style.width = strength + '%';
            progressBar.className = 'progress-bar ' + color;
            strengthText.textContent = 'Fortaleza: ' + message;
            strengthText.className = 'text-' + color.replace('bg-', '');
        });

        // Verificar que las contraseñas coincidan
        document.getElementById('confirmarPassword').addEventListener('input', function(e) {
            const nuevaPassword = document.getElementById('nuevaPassword').value;
            const confirmarPassword = e.target.value;

            if (confirmarPassword.length > 0) {
                if (nuevaPassword === confirmarPassword) {
                    e.target.classList.remove('is-invalid');
                    e.target.classList.add('is-valid');
                } else {
                    e.target.classList.remove('is-valid');
                    e.target.classList.add('is-invalid');
                }
            } else {
                e.target.classList.remove('is-valid', 'is-invalid');
            }
        });
    </script>

    <style>
        .required::after {
            content: " *";
            color: red;
            font-weight: bold;
        }

        .input-group .btn {
            border-left: 0;
        }

        .input-group .form-control {
            border-right: 0;
        }

        .input-group .form-control:focus + .btn {
            border-color: #86b7fe;
        }
    </style>
}
