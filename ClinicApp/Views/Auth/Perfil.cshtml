@model ClinicApp.Models.Usuario
@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="bi bi-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-person-circle"></i> Mi Perfil
                        </h4>
                        <span class="badge bg-light text-dark">@Model.Rol</span>
                    </div>
                </div>
                <div class="card-body p-4">
                    <!-- Avatar placeholder -->
                    <div class="text-center mb-4">
                        <div class="avatar-placeholder mx-auto" style="width: 120px; height: 120px;">
                            <i class="bi bi-person-circle" style="font-size: 120px; color: #6c757d;"></i>
                        </div>
                        <h5 class="mt-2 mb-0">@Model.NombreCompleto</h5>
                        <p class="text-muted">&#64;@Model.NombreUsuario</p>
                    </div>

                    <hr />

                    <!-- Información del usuario -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted small mb-1">
                                    <i class="bi bi-person-badge"></i> Nombre Completo
                                </label>
                                <div class="fw-medium">@Model.NombreCompleto</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted small mb-1">
                                    <i class="bi bi-at"></i> Usuario
                                </label>
                                <div class="fw-medium">@Model.NombreUsuario</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted small mb-1">
                                    <i class="bi bi-envelope"></i> Email
                                </label>
                                <div class="fw-medium">@Model.Email</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted small mb-1">
                                    <i class="bi bi-shield-check"></i> Rol
                                </label>
                                <div>
                                    @if (Model.Rol == "Administrador")
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-star-fill"></i> Administrador
                                        </span>
                                    }
                                    else if (Model.Rol == "Doctor")
                                    {
                                        <span class="badge bg-primary">
                                            <i class="bi bi-heart-pulse"></i> Doctor
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">
                                            <i class="bi bi-person"></i> @Model.Rol
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted small mb-1">
                                    <i class="bi bi-calendar-check"></i> Fecha de Registro
                                </label>
                                <div class="fw-medium">
                                    @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted small mb-1">
                                    <i class="bi bi-clock-history"></i> Último Acceso
                                </label>
                                <div class="fw-medium">
                                    @if (Model.UltimoAcceso.HasValue)
                                    {
                                        @Model.UltimoAcceso.Value.ToString("dd/MM/yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Nunca</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="info-item">
                                <label class="text-muted small mb-1">
                                    <i class="bi bi-check-circle"></i> Estado de la Cuenta
                                </label>
                                <div>
                                    @if (Model.Activo)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle-fill"></i> Activa
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle-fill"></i> Inactiva
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <!-- Acciones -->
                    <div class="row g-2">
                        <div class="col-md-6">
                            <a asp-action="CambiarPassword" class="btn btn-warning w-100">
                                <i class="bi bi-key"></i> Cambiar Contraseña
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-house"></i> Volver al Inicio
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Estadísticas (opcional) -->
                <div class="card-footer bg-light">
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="stat-item">
                                <i class="bi bi-calendar3 text-primary"></i>
                                <div class="small text-muted">Miembro desde</div>
                                <div class="fw-bold">
                                    @((DateTime.Now - Model.FechaCreacion).Days) días
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-item">
                                <i class="bi bi-shield-check text-success"></i>
                                <div class="small text-muted">Seguridad</div>
                                <div class="fw-bold">Activa</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-item">
                                <i class="bi bi-person-check text-info"></i>
                                <div class="small text-muted">Sesiones</div>
                                <div class="fw-bold">
                                    @(Model.UltimoAcceso.HasValue ? "Activo" : "Primera vez")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tarjeta de ayuda -->
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-info-circle text-info"></i> Información de Seguridad
                    </h6>
                    <ul class="small mb-0">
                        <li>Tu información personal está protegida</li>
                        <li>Cambia tu contraseña regularmente para mayor seguridad</li>
                        <li>No compartas tus credenciales con nadie</li>
                        <li>Si detectas actividad sospechosa, contacta al administrador</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .info-item {
        padding: 0.75rem;
        background: #f8f9fa;
        border-radius: 0.375rem;
        border-left: 3px solid #0d6efd;
    }

    .stat-item {
        padding: 1rem 0;
    }

    .stat-item i {
        font-size: 1.5rem;
        display: block;
        margin-bottom: 0.5rem;
    }

    .avatar-placeholder {
        position: relative;
        display: inline-block;
    }
</style>
